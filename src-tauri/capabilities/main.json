{
	"$schema": "../gen/schemas/desktop-schema.json",
	"identifier": "main-capabilities",
	"description": "Capability for desktop window",
	"windows": ["main"],
	"permissions": [
		"store:allow-get",
		"store:allow-set",
		"store:allow-save",
		"store:allow-clear",
		"store:allow-delete",
		"store:allow-keys",
		"store:allow-load",
		"notification:default",
		"core:webview:allow-internal-toggle-devtools",
		"dialog:default",
		"dialog:allow-save",
		"fs:default",
		"fs:allow-write",
		"fs:allow-app-write",
		"fs:allow-read",
		"fs:allow-applocaldata-read-recursive",
		"fs:allow-applocaldata-write-recursive",
		"upload:allow-download",
		"clipboard-manager:allow-write-text"
	]
}
